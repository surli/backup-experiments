<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<baseDirectory>/</baseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<includes>
				<include>bin/*.bat</include>
			</includes>
			<filtered>true</filtered>
			<outputDirectory>/</outputDirectory>
			<lineEnding>windows</lineEnding>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<includes>
				<include>bin/*.sh</include>
			</includes>
			<filtered>true</filtered>
			<outputDirectory>/</outputDirectory>
			<lineEnding>unix</lineEnding>
			<directoryMode>755</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<includes>
				<include>macro/*.dotm</include>
			</includes>
			<filtered>false</filtered>
			<outputDirectory>/</outputDirectory>
			
		</fileSet>

	</fileSets>
	<dependencySets>
		<dependencySet>
                        <excludes>
                         <exclude>fr.opensagres.xdocreport:fr.opensagres.xdocreport.openoffice.macro</exclude>
                        </excludes>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
		<dependencySet>
                        <includes>
                          <include>fr.opensagres.xdocreport:fr.opensagres.xdocreport.openoffice.macro</include>
                        </includes>
			<outputDirectory>macro</outputDirectory>
		</dependencySet>
	</dependencySets>

</assembly>
