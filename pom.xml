            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>findbugs-maven-plugin</artifactId>
                <version>2.5.2</version>
                <configuration>
                    <effort>Max</effort>
                    <excludeFilterFile>etc/findbugs-exclude.xml</excludeFilterFile>
                    <threshold>Exp</threshold>
                </configuration>
            </plugin>
