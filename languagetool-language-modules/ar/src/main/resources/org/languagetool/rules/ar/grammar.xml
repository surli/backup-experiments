<!-- Pluriel-->
<!-- ====================================================================== -->
<category id="Pluriel" name="أخطاء في الجمع" type="grammar">
	<rulegroup id="PluralRules" name="قواعد الجمع">
		<rule>
			<pattern>
				<marker><token>الموانئ</token></marker>
			</pattern>
			<message> صيغة الجمع غير صحيحة: لا تحتاج إلى الياء المهموزة..أتقصد<suggestion>المواني </suggestion>؟</message>
			<example correction="المواني"><marker>الموانئ</marker></example>
		</rule>
		<rule>
			<pattern>
				<marker><token>إطارات</token></marker>
			</pattern>
			<message>صيغة الجمع غير صحيحة:جمع إطار من جمع التكسير ..أتقصد <suggestion>أطر</suggestion>؟</message>
			<example correction="أطر"><marker>إطارات</marker></example>
		</rule>
		<rule>
			<pattern>
				<marker><token>إطارات</token></marker>
			</pattern>
			<message>صيغة الجمع غير صحيحة:جمع إطار من جمع التكسير ..أتقصد<suggestion>أطر</suggestion>؟</message>
			<example correction="أطر"><marker>إطارات</marker></example>
		</rule>
		
		<rule>
			<pattern>
				<marker><token regexp="yes">بدائل|بدلات</token></marker>
			</pattern>
			<message>صيغة الجمع الصحيحة هي:  <suggestion>أبدال</suggestion>؟</message>
			<example correction="أبدال"><marker>\1</marker></example>
		</rule>
		<rule>
			<pattern>
				<marker><token regexp="yes">جدايا|جديان</token></marker>
			</pattern>
			<message>  صيغة الجمع غير صحيحة:جمع جدي هو <suggestion>جداء</suggestion>؟</message>
			<example correction="جداء"><marker>\1</marker></example>
		</rule>		
		<rule>
			<pattern>
				<marker><token>محلات </token></marker>
			</pattern>
			<message>صيغة الجمع غير صحيحة:جمع محل هو: <suggestion>محال</suggestion>؟</message>
			<example correction="محال"><marker>محلات</marker></example>
		</rule>
		<rule>
			<pattern>
				<marker><token>أمساء</token></marker>
			</pattern>
			<message>صيغة الجمع غير صحيحة:جمع مساء هو: <suggestion>أمسية</suggestion>؟</message>
			<example correction="أمسية"><marker>أمساء</marker></example>
		</rule>
		<rule>
			<pattern>
				<marker><token>خيطان</token></marker>
			</pattern>
			<message>صيغة الجمع غير صحيحة:جمع خيط هو: <suggestion>خيوط</suggestion>؟</message>
			<example correction="خيوط"><marker>خيطان</marker></example>
		</rule>
		<rule>
			<pattern>
				<marker><token>أدخنة</token></marker>
			</pattern>
			<message>صيغة الجمع غير صحيحة:جمع دخان هو: <suggestion>دواخن</suggestion>؟</message>
			<example correction="دواخن"><marker>أدخنة</marker></example>
		</rule>
		<rule>
			<pattern>
				<marker><token>أفمام</token></marker>
			</pattern>
			<message>صيغة الجمع غير صحيحة:جمع فم هو: <suggestion>أفواه</suggestion>؟</message>
			<example correction="أفواه"><marker>أفمام</marker></example>
		</rule>
		<rule>
			<pattern>
				<marker><token>سندات</token></marker>
			</pattern>
			<message>صيغة الجمع غير صحيحة:جمع سند هو: <suggestion>أسناد</suggestion>؟</message>
			<example correction="أسناد"><marker>سندات</marker></example>
		</rule>
		
		<rule>
			<pattern>
				<marker><token>صباحات</token></marker>
			</pattern>
			<message>صيغة الجمع غير صحيحة:جمع صباح هو: <suggestion>أصبحة</suggestion>؟</message>
			<example correction="أصبحة"><marker>صباحات</marker></example>
		</rule>
		<rule>
			<pattern>
				<marker><token>صحر</token></marker>
			</pattern>
			<message>صيغة الجمع غير صحيحة:جمع صحراء هو: <suggestion>صحاري</suggestion>؟</message>
			<example correction="صحاري"><marker>صحر</marker></example>
			<example correction="صحارى"><marker>صحر</marker></example>
			<example correction="صحراوات"><marker>صحر</marker></example>
		</rule>
	</rulegroup>
</category>
