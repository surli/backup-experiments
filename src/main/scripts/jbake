#!/bin/bash

P=$(realpath $0 2>/dev/null)
if [ 0 -ne $? ]; then
  P=$0
fi

EXEC_LOC="`dirname "$P"`"
EXEC_PARENT="`dirname $EXEC_LOC`"
OPTS="-XX:MaxDirectMemorySize=1024m"

CYGWIN=false;
case "`uname`" in
  CYGWIN*) CYGWIN=true;;
esac

if $CYGWIN ;
then
    java $OPTS -jar $(cygpath -w "${EXEC_PARENT}/jbake-core.jar") $@
else
    java $OPTS -jar "${EXEC_PARENT}/jbake-core.jar" $@
fi