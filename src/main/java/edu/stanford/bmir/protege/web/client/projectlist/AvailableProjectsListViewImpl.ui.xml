<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:style>

        .main {
            padding-left: 10px;
            padding-right: 10px;
            padding-top: 0;
            padding-bottom: 10px;
            display: flex;
            flex-direction: column;


        }

        .header {
            display: flex;
            flex-direction: row;
            color: #606060;
            font-weight: bold;
            padding: 5px;
            border-bottom: 1px solid #f0f0f0;
            flex-grow: 0;
            min-height: 2em;
            /*flex-shrink: 0;*/
        }

        .displayNameCol {
            width: 400px;
            flex-grow: 0;
            padding: 5px;
            align-items: baseline;
        }
        .ownerCol {
            width: 200px;
            flex-grow: 0;
            padding: 5px;
            align-items: baseline;
        }
        .openedAtCol {
            width: 200px;
            flex-grow: 0;
            padding: 5px;
            align-items: baseline;
        }
        .modifiedAtCol {
            width: 200px;
            flex-grow: 0;
            padding: 5px;
            align-items: baseline;
        }
        .menuButtonCol {
            flex-grow: 0;
            flex-shrink: 0;
            padding-right: 10px;
            padding-left: 10px;
            align-items: baseline;
            width: 12px;
        }

        .projectList {
            overflow-y: auto;
        }


    </ui:style>

    <g:HTMLPanel addStyleNames="{style.main}">
        <g:HTMLPanel addStyleNames="{style.header}">
            <g:Label addStyleNames="{style.displayNameCol}" text="{msg.projectName}"/>
            <g:Label addStyleNames="{style.ownerCol}" text="{msg.owner}"/>
            <g:Label addStyleNames="{style.openedAtCol}" text="{msg.lastOpened}"/>
            <g:Label addStyleNames="{style.modifiedAtCol}" text="{msg.lastModified}"/>
            <g:Label addStyleNames="{style.menuButtonCol}"/>
        </g:HTMLPanel>
        <g:FlowPanel ui:field="itemContainer" addStyleNames="{style.projectList}"/>
    </g:HTMLPanel>
</ui:UiBinder>