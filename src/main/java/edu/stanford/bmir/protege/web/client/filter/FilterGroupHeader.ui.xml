<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            margin-bottom: 5px;
            white-space: nowrap;
        }
        .label {
            font-weight: bold;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:InlineLabel ui:field="label" addStyleNames="{style.label}"/>  <g:Anchor ui:field="selectAllButton" text="Select All"/> | <g:Anchor ui:field="selectNoneButton" text="Select None"/>
    </g:HTMLPanel>
</ui:UiBinder>