<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:button="urn:import:edu.stanford.bmir.protege.web.client.library.button">
    <ui:style>
        .main {
            display: flex;
            flex-direction: row;
            align-items: flex-start;
            flex-grow: 1;
        }
        .editorHolder {
            flex-grow: 1;
        }
        .deleteButton {
            flex-grow: 0;
            flex-shrink: 0;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:SimplePanel ui:field="editorHolder" addStyleNames="{style.editorHolder}"/>
        <button:DeleteButton ui:field="deleteButton" addStyleNames="{style.deleteButton}"/>
    </g:HTMLPanel>
</ui:UiBinder>